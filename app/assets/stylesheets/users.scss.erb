.full {
    position: relative;
    width: 100%;
    min-height: 100vh;
    background: url("<%= asset_path("default_image.jpg") %>") center / cover;
    z-index: 0;
}

.full::before {
    content: '';
    position: absolute;
    width: 100%;
    min-height: 100%;
    background: inherit;
    filter: contrast(70%);
    z-index: -1;
}

.title {
    margin: 0;
    position: absolute;
    top: calc(50% - 0.5em);
    width: 100%;
    text-align: center;
    line-height: 1;
    font-size: 5vw;
    text-shadow: 10px 10px 0 #fff;
    font-family: "Montserrat", sans-serif;
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

