</header>
<section class="posting">
    <h1 class="post">Posting</h1>
    <div class="card-columns">
        <% @posts.each do |post| %>
        <div class="col">
            <div class="card border-primary mb-3 text-center">
                <div class="card-header text-white bg-white border-primary">
                    <% @firm.each do |firm| %>
                    <% if firm.name == post.firm_name %>
                    <%= image_tag firm.firm_sambnail.variant(resize_to_fill: [400, 350] ).processed%>
                    <% end %>
                    <% end %>
                </div>
                <%= link_to login_path do %>
                <div class="card-body">
                    <h2 class="card-title">
                        <%= post.title %>
                    </h2>
                    <p>
                        投稿日: <%= post.created_at %>
                    </p>
                </div>
                <% end %>
                <div class="card-footer">
                    <h5>
                        <%= post.firm_name %>
                    </h5>
                </div>
            </div>
        </div>
        <% end %>
</section>

