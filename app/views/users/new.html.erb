<body class="text-center">
    <%= form_with model: @user, url: signup_path, local: true, class: "form-signin" do |f| %>
    <% if @user.errors.any? %>
    <ul>
        <%= @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
    <h1 class="h3 mb-3 font-weight-normal">ユーザー登録画面</h1>

    <%= f.label :name, 'お名前', class: "sr-only" %>
    <%= f.text_field :name, required: true, class: "form-control", placeholder: "Name"%>


    <%= f.label :account_id, class: "sr-only"  %>
    <%= f.text_field :account_id, required: true, class: "form-control", placeholder: "AccountID" %>



    <%= f.label :email, class: "sr-only"  %>
    <%= f.text_field :email, required: true, class: "form-control", placeholder: "Email address" %>



    <%= f.label :password, class: "sr-only"  %>
    <%= f.password_field :password, required: true, class: "form-control", placeholder: "Password" %>



    <%= f.label :password_confirmation, class: "sr-only"  %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Password confirmation"  %>



    <p><%= f.submit '送信', class: "btn btn-lg btn-primary btn-block" %></p>

    <% end %>
</body>