 <section class="hero is-light is-fullheight">
     <div class="hero-head">

         <section class="hero is-primary">
             <div class="hero-body">
                 <div class="container">
                     <h1 class="title">
                         ログイン
                     </h1>
                 </div>
             </div>
         </section>

         <section class="section">
             <div class="container">
                 <div class="columns is-centered">
                     <div class="column is-5">
                         <%= form_with scope: :session, url: login_path, local: true do |f| %>
                         <%= flash[:alert] %>

                         <div class="field">
                             <p>
                                 <%= f.label :account_id, 'アカウントID' %>
                                 <%= f.text_field :account_id, required: true, class: "input" %>
                             </p>
                         </div>

                         <div class="field">
                             <p>
                                 <%= f.label :email, 'メールアドレス' %>
                                 <%= f.text_field :email, required: true, class: "input" %>
                             </p>
                         </div>

                         <div class="field">
                             <p>
                                 <%= f.label :password, 'パスワード' %>
                                 <%= f.password_field :password, required: true, class: "input" %>
                             </p>
                         </div>

                         <%= f.label :remember_me, class:"checkbox" do %>
                         <%= f.check_box :remember_me %>
                         <span>コンピュータに保存</span>
                         <% end %>

                         <div class="actions">
                             <p><%= f.submit 'ログイン', class: "button is-success" %></p>
                         </div>
                         <% end %>

                         <p><%= link_to 'パスワードをお忘れ,または変更したい場合', forgot_path %></p>
                     </div>
                 </div>
             </div>
         </section>
     </div>
 </section>