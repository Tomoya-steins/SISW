 <section class="hero is-light is-fullheight">
     <div class="hero-head">

         <section class="hero is-primary">
             <div class="hero-body">
                 <div class="container">
                     <h1 class="title">
                         新規投稿
                     </h1>
                 </div>
             </div>
         </section>

         <section class="section">
             <div class="container">
                 <div class="columns is-centered">
                     <div class="column is-5">
                         <%= form_with model: @post, url: posts_path, local: true do |f| %>
                         <%= flash[:alert] %>

                         <div class="field">
                             <p>
                                 <%= f.label :title, 'タイトル', class: "label" %>
                                 <%= f.text_field :title, class: "input" %>
                             </p>
                         </div>

                         <div class="field">
                             <p>
                                 <%= f.label :pdf_file, 'PDF', class: "label" %>
                                 <%= f.file_field :pdf_file, class: "input"  %>
                             </p>
                         </div>
                         <%= f.hidden_field :user_id, value: current_user.id %>

                         <div class="actions">
                             <p><%= f.submit '投稿', class: "button is-success" %></p>
                         </div>
                         <% end %>
                     </div>
                 </div>
             </div>
         </section>