 <section class="hero is-light is-fullheight">
     <div class="hero-head">

         <section class="hero is-primary">
             <div class="hero-body">
                 <div class="container">
                     <h1 class="title">
                         編集
                     </h1>
                 </div>
             </div>
         </section>

         　　　　　<section class="section">
             <div class="container">
                 <div class="columns is-centered">
                     <div class="column is-5">
                         <%= form_with model: @post, url: post_path do |f| %>

                         <div class="field">
                             <p>
                                 <%= f.label :タイトル, class: "label" %>
                                 <%= f.text_field :title, class: "input" %>
                             </p>
                         </div>

                         <div class="field">
                             <p>
                                 <%= f.label :投稿画像, class: "label" %>
                                 <%= f.attachment_field :image, class: "input" %>
                             </p>
                         </div>

                         <div class="actitons">
                             <p><%= f.submit "変更", class: "button is-success"%></p>
                         </div>
                         <% end %>
                     </div>
                 </div>
             </div>
         </section>