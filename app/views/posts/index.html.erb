<body class="text-center">
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
        <div class="inner">
            <h1>投稿内容一覧</h1>
        </div>

        <main role="main" class="inner cover">
            <% @posts.each do |post| %>
            <h3 class="cover-heading">
                <%= link_to "#{post.title}-PDF", rails_blob_path(post.pdf_file) %>
            </h3>
            <p class="lead">
                <%= link_to "↑削除", post_path(post), method: :delete, class: "btn btn-lg btn-secondary" %>
            </p>
            <% end %>
        </main>
    </div>
</body>


