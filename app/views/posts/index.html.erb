<p id="notice"><%= notice %></p>

<table>
    <thead>
        <tr>
            <th>投稿一覧</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= link_to "#{post.title}", post %></td>
            <% if current_user.admin? %>
            <td><%= link_to '消去する', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

<% if current_user.admin? %>
<br>
<%= link_to '新規作成', new_post_path %>
<% end %>