<section class="hero is-light is-fullheight">
    <div class="hero-head">
        <section class="hero is-primary">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        <%=current_user.name %>さんこんにちは!
                    </h1>
                </div>
            </div>
        </section>

        <section class="section">
            <div class="container">
                <div class="columns is-centered">
                    <div class="column is-5">
                        <p>投稿内容一覧</p>
                        <% @posts.each do |post| %>

                        <div class="field">
                            <p>
                                <%= link_to "#{post.title}-PDF", rails_blob_path(post.pdf_file) %>
                                <%= link_to "←削除", post_path(post), method: :delete %>
                            </p>
                        </div>
                        <% end %>
                    </div>
                </div>
        </section>