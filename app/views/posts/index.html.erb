<h1>投稿一覧</h1>
<div class="row">
    <% @posts.each do |post| %>
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <%= post.content %>
            </div>
            <div class="card-footer">
                <h5 class="card-title">
                    <%= link_to post do %>
                    <%= post.title %>
                    <% end %>
                </h5>
                <% if current_user.admin? %>
                <button class="btn btn-outline-info btn-block btn-sm"><%= link_to '消去する', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
</div>

<% if current_user.admin? %>
<%= link_to '新規作成', new_post_path %>
<% end %>