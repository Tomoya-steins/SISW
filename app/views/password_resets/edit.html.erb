<body class="text-center">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    <%= flash[:alert] %>

    <h1 class="h3 mb-3 font-weight-normal">パスワード変更</h1>

    <%= hidden_field_tag :email, @user.email %>

    <%= f.label :password, class: "sr-only"  %>
    <%= f.password_field :password, required: true, class: "form-control", placeholder: "Email address"   %>

    <%= f.label :password_confirmation, class: "sr-only"  %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Email address"   %>

    <%= f.submit '送信する', class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
</body>