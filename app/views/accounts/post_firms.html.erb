<div class="container">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">所属</th>
                <th scope="col">メールアドレス</th>
            </tr>
        </thead>
        <tbody>
            <% @firm.each do |info| %>
            <% @post_firm.each do |post| %>
            <% if info.belonging == post.firm_name%>
            <tr>
                <td><%= link_to info.belonging, personal_path(info) %></td>
                <td><%= info.email %></td>
            </tr>
            <% end %>
            <% end %>
            <% end %>
        </tbody>
    </table>
</div>



<script type="text/javascript">
    $(document).ready(function() {
        $('#example').DataTable();
    });
</script>