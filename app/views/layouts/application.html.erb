<!DOCTYPE html>
<html>

<head>
    <title>SISW</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <% if flash[:notice] %>
    <div class="notification is-info">
        <p class="notice"><%= notice %></p>
    </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
    </div>
    <% end %>

    <nav class="navbar is-warning">
        <div class="navbar-brand">
            <% if current_user == nil %>
            <h1 class="title is-4" style="font-family: Comic Sans MS;">SIS</h1>
            <% else %>
            <h1 class="title is-4" style="font-family: Comic Sans MS;">Sharing Information at school</h1>
            <% end %>
            <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
            <% if current_user != nil %>
            <div class="navbar-end">
                <div class="field is-grouped">
                    <div class="navbar-item">
                        <%= link_to  "投稿一覧", root_path, class: "navbar-item button is-primary is-light" %>
                    </div>
                    <% if current_user.admin? %>
                    <div class="navbar-item">
                        <%= link_to '新規投稿', new_post_path, class: "navbar-item button is-primary is-light" %>
                    </div>
                    <%  end %>
                    <% if current_user.admin? %>
                    <div class="navbar-item">
                        <%= link_to 'ユーザ一覧', accounts_path, class: "navbar-item button is-primary is-light" %>
                    </div>
                    <% else %>
                    <div class="navbar-item">
                        <%= link_to "#{current_user.name}詳細", personal_path(current_user), class: "navbar-item button is-primary is-light"  %>
                    </div>
                    <% end %>
                    <div class="navbar-item">
                        <%= link_to 'ログアウト', logout_path, method: :delete, class: "navbar-item button is-primary is-light" %>
                    </div>
                </div>
            </div>
        </div>
        <% else %>
        <div class="navbar-end">
            <div class="field is-grouped">
                　　 <div class="navbar-item">
                    <%= link_to 'ログイン', login_path, class: "navbar-item button is-primary is-light" %>
                </div>
                <div class="navbar-item">
                    <%= link_to 'サインアップ', signup_path, class: "navbar-item button is-primary is-light" %>
                </div>
            </div>
        </div>
        <% end %>
        </div>
    </nav>
    <%= yield %>
</body>

</html>