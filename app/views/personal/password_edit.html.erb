<%= form_with model: @personal, url: personal_path, local: true do |f| %>
<% if @personal.errors.any? %>
<ul>
    <%= @personal.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<p>
    <%= f.label :name, 'お名前を入力してください' %>
    <%= f.text_field :name, required: true %>
</p>

<p>
    <%= f.label :account_id, 'アカウントIDを入力してください' %>
    <%= f.text_field :account_id, required: true %>
</p>

<p>
    <%= f.label :password, '新しいパスワードを入力してください' %>
    <%= f.password_field :password, required: true %>
</p>

<p>
    <%= f.label :password_confirmation, 'パスワード(確認)' %>
    <%= f.password_field :password_confirmation, required: true %>
</p>

<p><%= f.submit '送信' %></p>
<% end %>