<body class="text-center">

    <%= form_with model: @personal, url: personal_path,  local: true, class: "form-signin" do |f|  %>
    <div class="container">
        <div class="col-md-10">
            <h1><%= @personal.name %>-編集</h1>
            <br>
            <br>



            <%= f.label :氏名, class: "sr-only" %>
            <%= f.text_field :name, value: @personal.name, required: true, class: "form-control" %>
            <br>

            <%= f.label :所属先, class: "sr-only" %>
            <%= f.text_field :belonging, value: @personal.belonging, required: true, class: "form-control" %>
            <br>

            <%= f.label :メールアドレス, class: "sr-only" %>
            <%= f.text_field :email, value: @personal.email, required: true, class: "form-control" %>
            <br>

            <%= f.file_field :firm_sambnail %>

            <%= f.submit '変更', class: "btn btn-lg btn-primary btn-block" %>
        </div>
    </div>
    <% end %>

</body>