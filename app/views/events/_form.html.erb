<section class="new-event-form">
    <div class="container">
        <%= form_with(model: event, local: true, class: "text-center border border-light p-5" ) do |form| %>
        <% if event.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
                <% event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>


        <%= form.text_field :title, class: "form-control mb-4", id: "defaultContactFormName", placeholder: "タイトル" %>

        <div class="form-group">
            <%= form.text_area :body, class: "form-control round-0", id: "exampleFormControlTextarea2", placeholder: "内容" %>
        </div>

        <%= form.label :start %>
        <%= form.datetime_select :start %>

        <div class="form-group">
            <%= form.label :end %>
            <%= form.datetime_select :end %>
        </div>

        <%= form.submit "決定する", class: "btn btn-outline-info btn-block" %>

        <% end %>
    </div>
</section>