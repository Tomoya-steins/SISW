<%
=begin%>
<p id="notice"><%= notice %></p>
<%
=end%>

<div class="container">
    <div class="table-wrapper-scroll-y my-custom-scrollbar">

        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th scope="col">タイトル</th>
                    <th scope="col">内容</th>
                    <th scope="col">開始</th>
                    <th scope="col">終了</th>
                </tr>
            </thead>
            <tbody>
                　　<% @events.each do |event| %>
                <tr>
                    　　　　　　　<td><%= event.title %></td>
                    <td><%= event.body %></td>
                    <td><%= event.start %></td>
                    <td><%= event.end %></td>
                    <% if current_user.admin? %>
                    <td><button class="btn  btn-outline-info  btn-sm"><%= link_to '編集', edit_event_path(event) %></button></td>
                    <td><button class="btn  btn-outline-info  btn-sm"><%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>

    </div>

    <br>
    <% if current_user.admin? %>
    <button class="btn  btn-outline-info  btn-sm">
        <%= link_to 'イベントを作成', new_event_path %>
    </button>
    <% end %>
</div>
<div class="border"></div>


<div id="calendar"></div>